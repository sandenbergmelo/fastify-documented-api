{
  "name": "fastify-documented-api",
  "version": "1.0.0",
  "description": "Um exemplo de API documentada utilizando TypeScript, Fastify, Zod, Swagger e Drizzle ORM.",
  "main": "src/app.ts",
  "type": "module",
  "scripts": {
    "dev": "node --env-file .env --watch ./src/app.ts",
    "pretest": "dotenv -e .env.test drizzle-kit migrate",
    "test": "dotenv -e .env.test vitest",
    "test:cov": "dotenv -e .env.test vitest -- --coverage",
    "test:ui": "dotenv -e .env.test vitest -- --ui",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:seed": "node --env-file .env src/database/seed.ts",
    "lint": "eslint .",
    "format": "eslint --fix ."
  },
  "author": "Sandenberg",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/swagger": "^9.6.1",
    "@scalar/fastify-api-reference": "^1.40.5",
    "argon2": "^0.44.0",
    "drizzle-orm": "^0.45.1",
    "fastify": "^5.6.2",
    "fastify-type-provider-zod": "^6.1.0",
    "jose": "^6.1.3",
    "pg": "^8.16.3",
    "pino-pretty": "^13.1.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@rocketseat/eslint-config": "3.0.12",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.16.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "dotenv-cli": "^11.0.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-import-newlines": "^1.4.0",
    "fishery": "^2.4.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
